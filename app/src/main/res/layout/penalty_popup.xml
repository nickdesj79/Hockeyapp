<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="0"
        android:id="@+id/button0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="162dp"
        android:layout_marginLeft="265dp"
        android:layout_marginStart="265dp"
        android:layout_width="96dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="setPenalty0"/>

    <Button
        android:text="1"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:layout_alignBaseline="@+id/button0"
        android:layout_alignBottom="@+id/button0"
        android:layout_toRightOf="@+id/button0"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:onClick="setPenalty1"/>

    <Button
        android:text="2"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:id="@+id/button2"
        android:onClick="setPenalty2"/>

    <Button
        android:text="3 ou plus"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:onClick="setPenalty3"/>

    <TextView
        android:text="Combien de pénalités @id a-t'il eu durant cette descente"
        android:layout_height="wrap_content"
        android:id="@+id/nomPenalty"
        android:layout_width="wrap_content"
        android:layout_marginBottom="183dp"
        android:layout_above="@+id/button0"
        android:layout_centerHorizontal="true" />

</RelativeLayout>